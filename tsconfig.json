{
  "compilerOptions": {
    "target": "ES2019",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["node"],
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "declaration": true,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedDeclarations": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}
