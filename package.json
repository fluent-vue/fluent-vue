{
  "private": true,
  "version": "3.0.0",
  "workspaces": [
    "packages/*"
  ],
  "homepage": "https://fluent-vue.demivan.me",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/demivan/fluent-vue.git"
  },
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "node scripts/build.js",
    "size": "node scripts/build.js fluent-vue -p -f global",
    "lint": "eslint .",
    "ls-lint": "ls-lint",
    "test": "node scripts/swap-vue 3 && jest --runInBand",
    "test:2": "node scripts/swap-vue 2 && jest --runInBand packages/fluent-vue/",
    "test:3": "node scripts/swap-vue 3 && jest --runInBand",
    "release": "shipjs prepare"
  },
  "gitHooks": {
    "pre-commit": "ls-lint && lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.ts?(x)": "eslint --fix"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "changelog": {
    "labels": {
      "Type: Feature": ":star: New Features",
      "Type: Bug": ":bug: Bug Fixes",
      "Type: Security": ":lock: Security Fixes",
      "Type: Performance": ":chart_with_upwards_trend: Performance Fixes",
      "Type: Improvement": ":zap: Improved Features",
      "Type: Breaking": ":boom: Breaking Change",
      "Type: Deprecated": ":warning: Deprecated Features",
      "Type: I18n": ":globe_with_meridians: Internationalization",
      "Type: A11y": ":wheelchair: Accessibility",
      "Type: Documentation": ":pencil: Documentation"
    }
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "^1.10.0",
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/jest": "^27.0.2",
    "@types/node": "15.0.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "brotli": "^1.3.2",
    "chalk": "^4.1.2",
    "eslint": "^8.0.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-vue": "^7.19.1",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "jest": "^27.2.5",
    "lint-staged": "^11.2.3",
    "memfs": "^3.3.0",
    "minimist": "^1.2.5",
    "rollup": "^2.58.0",
    "rollup-plugin-dts": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-vue": "^6.0.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.4",
    "vue-loader": "^16.8.1",
    "yorkie": "^2.0.0"
  }
}
