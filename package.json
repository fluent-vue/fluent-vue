{
  "private": true,
  "version": "3.0.0-beta.16",
  "workspaces": [
    "packages/*"
  ],
  "homepage": "https://fluent-vue.demivan.me",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/demivan/fluent-vue.git"
  },
  "scripts": {
    "dev": "node scripts/build.mjs fluent-vue -w -p -f global",
    "build": "node scripts/build.mjs",
    "build:prod": "node scripts/build.mjs -t",
    "size": "node scripts/build.mjs fluent-vue -p -f global --size",
    "lint": "eslint .",
    "ls-lint": "ls-lint",
    "test": "node scripts/swap-vue 3 && jest --runInBand",
    "test:2": "node scripts/swap-vue 2 && jest --runInBand packages/fluent-vue/",
    "test:3": "node scripts/swap-vue 3 && jest --runInBand",
    "release": "shipjs prepare"
  },
  "gitHooks": {
    "pre-commit": "ls-lint && lint-staged && tsc --build tsconfig.projects.json"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.ts?(x)": "eslint --fix"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "changelog": {
    "labels": {
      "Type: Feature": ":star: New Features",
      "Type: Bug": ":bug: Bug Fixes",
      "Type: Security": ":lock: Security Fixes",
      "Type: Performance": ":chart_with_upwards_trend: Performance Fixes",
      "Type: Improvement": ":zap: Improved Features",
      "Type: Breaking": ":boom: Breaking Change",
      "Type: Deprecated": ":warning: Deprecated Features",
      "Type: I18n": ":globe_with_meridians: Internationalization",
      "Type: A11y": ":wheelchair: Accessibility",
      "Type: Documentation": ":pencil: Documentation"
    }
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "^1.10.0",
    "@microsoft/api-extractor": "^7.18.4",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "brotli": "^1.3.2",
    "chalk": "^4.1.1",
    "esbuild": "^0.12.9",
    "eslint": "^7.31.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-vue": "^7.14.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "jest": "^27.0.6",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^11.1.1",
    "memfs": "^3.2.2",
    "minimist": "^1.2.5",
    "ts-jest": "^27.0.4",
    "ts-standard": "^10.0.0",
    "typescript": "^4.3.5",
    "vue-loader": "^16.3.3",
    "yorkie": "^2.0.0"
  }
}
