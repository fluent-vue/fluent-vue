{
  "private": true,
  "version": "3.0.0-beta.9",
  "workspaces": [
    "packages/*"
  ],
  "homepage": "https://fluent-vue.demivan.me",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/demivan/fluent-vue.git"
  },
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "node scripts/build.js",
    "size": "node scripts/build.js -p -f global",
    "lint": "prettier --write --parser typescript \"packages/**/*.ts?(x)\"",
    "ls-lint": "ls-lint",
    "test": "node scripts/swap-vue 3 && jest",
    "test:2": "node scripts/swap-vue 2 && jest",
    "test:3": "node scripts/swap-vue 3 && jest",
    "release": "shipjs prepare"
  },
  "gitHooks": {
    "pre-commit": "ls-lint && lint-staged"
  },
  "lint-staged": {
    "*.js": "prettier --write",
    "*.ts?(x)": "prettier --parser=typescript --write"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "changelog": {
    "labels": {
      "Type: Feature": ":star: New Features",
      "Type: Bug": ":bug: Bug Fixes",
      "Type: Security": ":lock: Security Fixes",
      "Type: Performance": ":chart_with_upwards_trend: Performance Fixes",
      "Type: Improvement": ":zap: Improved Features",
      "Type: Breaking": ":boom: Breaking Change",
      "Type: Deprecated": ":warning: Deprecated Features",
      "Type: I18n": ":globe_with_meridians: Internationalization",
      "Type: A11y": ":wheelchair: Accessibility",
      "Type: Documentation": ":pencil: Documentation"
    }
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "^1.9.0",
    "@microsoft/api-extractor": "^7.15.1",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@types/jest": "^26.0.22",
    "@types/node": "15.0.2",
    "brotli": "^1.3.2",
    "chalk": "^4.1.1",
    "eslint": "^7.25.0",
    "eslint-plugin-vue": "^7.9.0",
    "execa": "^5.0.0",
    "fs-extra": "^10.0.0",
    "jest": "^26.6.3",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^10.5.2",
    "minimist": "^1.2.0",
    "prettier": "^2.2.1",
    "rollup": "^2.47.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "shipjs": "0.23.2",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4",
    "yorkie": "^2.0.0"
  }
}
