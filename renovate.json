{
  "extends": [
    "config:base",
    "group:allNonMajor"
  ],
  "lockFileMaintenance": { "enabled": true },
  "packageRules": [
    {
      "depTypeList": ["dependencies"],
      "rangeStrategy": "replace"
    },
    {
      "depTypeList": ["devDependencies"],
      "rangeStrategy": "bump"
    },
    {
      "depTypeList": ["peerDependencies"],
      "rangeStrategy": "widen"
    }
  ]
}
